<h1>Sign up</h1>
<% if @user.errors.any? %>
  <div id="error_explanation">
    <h2><%= pluralize(@user.errors.count, "error") %> prohibited this <%= @user.namae %> from being saved:</h2>
    <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model:@user,local:true)do |f|%>
  <%= f.label :namae %>
  <%= f.text_field :namae %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password%>
  <br>
  <%= f.label :password_confirmation%>
  <%= f.password_field :password_confirmation%>
  <%= f.submit "Create my account" %>
<% end %>
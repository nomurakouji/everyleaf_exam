<h1>ユーザーの編集</h1>
<%= form_for(@user, url: user_path(@user)) do |f| %>
  <div>
    <%= f.label :namae %><br>
    <%= f.text_field :namae, autofocus: true, :placeholder =>"#{@user.namae}" %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_area :email, :placeholder =>"#{@user.email}" %>
  </div>
  <div><%= f.submit "編集完了" %></div>
<% end %>
<%= link_to 'ユーザーの管理画面に戻る', admin_users_path %>
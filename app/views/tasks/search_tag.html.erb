<div class="container">
<h5>タグが<%=@tag.label %>の投稿一覧</h5>
<table class="table">
  <tr>
    <th>タイトル</th>
    <th>内容</th>
    <th>締切</th>
    <th>優先順位</th>
    <th>状況</th>
    <th>作成者</th>
  </tr>
<% @tasks.each do |task| %>
  <tr>
    <td><%= task.name %></td>
    <td><%= task.content %></td>
    <td><%= task.deadline %></td>
    <td><%= task.priority %></td>
    <td><%= task.condition %></td>
    <td><%= task.user.namae %></td>
  </tr>
<% end %>
</table>
<br>
<%= link_to "タスク一覧へ", tasks_path %>
<h1>ユーザーの編集</h1>
  <% if @user.errors.any? %>
   <div id="error_explanation">
     <h2><%= @user.errors.count %>件のエラーがあります。</h2>
     <ul>
     <% @user.errors.full_messages.each do |msg| %>
      <li><%= msg %></li>
     <% end %>
     </ul>
  </div>
<% end %>

<%= form_with(model: @user, local: true) do |f| %>
  <div>
    <%= f.label :namae %><br>
    <%= f.text_field :namae %>
  </div>
  <div>
    <%= f.label :email %><br>
    <%= f.text_area :email %>
  </div>
   <div>
    <%= f.label :admin %><br>
    <%= f.select :admin, [true ,false] %>
  </div>
  <div><%= f.submit "編集完了" %></div>
<% end %>
<%= link_to 'ユーザーの管理画面に戻る', admin_users_path %>
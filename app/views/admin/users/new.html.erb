<h1>Sign up</h1>

<%= form_with(model:@user,local:true)do |f|%>
  <%= f.label :namae %>
  <%= f.text_field :namae %>
  <br>
  <%= f.label :email %>
  <%= f.email_field :email %>
  <br>
  <%= f.label :admin %>
  <%= f.check_box :admin%>
  <br>
  <%= f.label :password %>
  <%= f.password_field :password%>
  <br>
  <%= f.label :password_confirmation%>
  <%= f.password_field :password_confirmation%>
  <%= f.submit "Create my account" %>
<% end %>